# Production Environment Configuration Template
# NEVER COMMIT ACTUAL PRODUCTION VALUES
# Copy to .env.production and customize with real secrets

ENVIRONMENT=production
SERVICE_NAME=spatial-multiplayer
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Production Database - CHANGE THESE VALUES
POSTGRES_DB=spatial_platform
POSTGRES_USER=spatial_admin
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS_MIN
DATABASE_URL=postgresql://spatial_admin:CHANGE_ME_SECURE_PASSWORD_32_CHARS_MIN@postgres:5432/spatial_platform

# Production Redis - CHANGE THESE VALUES
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD_32_CHARS
REDIS_URL=redis://:CHANGE_ME_SECURE_REDIS_PASSWORD_32_CHARS@redis:6379/3

# Production MinIO - CHANGE THESE VALUES
MINIO_USER=spatial_admin
MINIO_PASSWORD=CHANGE_ME_SECURE_MINIO_PASSWORD_32_CHARS

# JWT Configuration - CRITICAL: CHANGE THIS VALUE
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET_MINIMUM_32_CHARACTERS_REQUIRED_FOR_PRODUCTION_SECURITY
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=1
JWT_REFRESH_EXPIRY_DAYS=7

# CORS Configuration - RESTRICT TO YOUR DOMAIN
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,https://api.yourdomain.com

# Rate Limiting (strict for production)
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=20

# Connection limits (production capacity)
MAX_CONNECTIONS=1000
SESSION_TIMEOUT=3600

# Performance tuning for production
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
REDIS_POOL_SIZE=10

# Security settings
REQUIRE_HTTPS=true
BCRYPT_ROUNDS=12

# Production features (disabled for security)
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_METRICS=true
ENABLE_TRACING=true
TRACING_SAMPLE_RATE=0.01

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=CHANGE_ME_SECURE_GRAFANA_PASSWORD

# Health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Logging
LOG_TO_STDOUT=true
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs/spatial-multiplayer.log
LOG_CORRELATION_ID=true
LOG_REQUEST_ID=true